<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.QuestionViewController">
   <children>
      <GridPane alignment="TOP_CENTER" layoutX="150.0" layoutY="293.0" prefHeight="61.0" prefWidth="300.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="buttonA" mnemonicParsing="false" onAction="#checkFirstAnswer" prefHeight="29.0" prefWidth="150.0" text="А:" />
            <Button fx:id="buttonB" mnemonicParsing="false" onAction="#checkSecondAnswer" prefHeight="36.0" prefWidth="187.0" text="B:" GridPane.columnIndex="1" />
            <Button fx:id="buttonC" mnemonicParsing="false" onAction="#checkThirdAnswer" prefHeight="50.0" prefWidth="190.0" text="C:" GridPane.rowIndex="1" />
            <Button fx:id="buttonD" mnemonicParsing="false" onAction="#checkFourthAnswer" prefHeight="49.0" prefWidth="174.0" text="D:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label fx:id="questionLabel" layoutX="127.0" layoutY="225.0" prefHeight="61.0" prefWidth="346.0" text="Вопрос" wrapText="true" />
      <Label fx:id="pointsLabel" layoutX="488.0" layoutY="14.0" prefHeight="42.0" prefWidth="98.0" text="Баллы:" />
   </children>
</AnchorPane>
